{
  "manifest_version": 2,
  "name": "Cream",
  "version": "0.1.1",
  "description": "Clicking on the extension icon will get you to the obscure noisy tab - simples. Click several times to get through all of them.",
  "commands": {
      "_execute_browser_action": {
        "suggested_key": {
          "default": "Ctrl+Shift+K",
          "mac": "MacCtrl+Shift+K"
        }
      }
  },
  "background": {
    "scripts": [
      "lib/main.js", "lib/background.js", "lib/listeners.js"
      ],
    "persistent": false
  },
  "icons":{
    "16": "img/icon16.png",
		"48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "browser_action": {
   "default_title": "Follow the noize",
   "default_icon": "img/icon48.png"
  },
  "permissions": [
    "tabs"
  ]
}
